<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="edu.cmich.rhynd1ml.pictaswab">

    <uses-sdk
        android:minSdkVersion="21"
        android:targetSdkVersion="23" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-feature android:name="android.hardware.camera2.full" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/pictaswab_logo"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity" android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".SwabPanel"
            android:theme="@style/AppTheme.WindowTheme.dim">
        </activity>

        <activity android:name=".TutorialPanel"
            android:theme="@style/AppTheme.WindowTheme">
        </activity>

    </application>

</manifest>